{
  "name": "monorepo",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "author": "Fractal-Tess",
  "description": "Monorepo is a turborepo monorepo starter template for setting up most of the initial configurations for a monorepo project. Any unused apps/packages can be deleted.",
  "repository": {
    "url": "https://github.com/Fractal-Tess/monorepo",
    "type": "git",
    "directory": "/"
  },
  "keywords": [
    "template",
    "starter",
    "monorepo",
    "turborepo",
    "svelte",
    "sveltekit",
    "react",
    "nextjs",
    "tailwindcss",
    "shadcn-ui",
    "typescript",
    "trpc",
    "web-extension"
  ],
  "scripts": {
    "test": "turbo run dev",
    "postinstall": "husky install"
