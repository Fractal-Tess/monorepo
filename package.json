      "prettier --write --plugin-search-dir=. --ignore-path=./.prettierignore"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.13.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier-plugin-svelte": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "turbo": "^1.13.2"
  },
  "engineStrict": true,
  "engines": {
    "pnpm": ">8.0.0",
    "node": ">20.0.0 <22.0.0"
  }
