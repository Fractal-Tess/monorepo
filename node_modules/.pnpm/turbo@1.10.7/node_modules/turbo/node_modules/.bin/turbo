#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/dev/starters/poly-starter/node_modules/.pnpm/turbo@1.10.7/node_modules/turbo/bin/node_modules:/mnt/dev/starters/poly-starter/node_modules/.pnpm/turbo@1.10.7/node_modules/turbo/node_modules:/mnt/dev/starters/poly-starter/node_modules/.pnpm/turbo@1.10.7/node_modules:/mnt/dev/starters/poly-starter/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/dev/starters/poly-starter/node_modules/.pnpm/turbo@1.10.7/node_modules/turbo/bin/node_modules:/mnt/dev/starters/poly-starter/node_modules/.pnpm/turbo@1.10.7/node_modules/turbo/node_modules:/mnt/dev/starters/poly-starter/node_modules/.pnpm/turbo@1.10.7/node_modules:/mnt/dev/starters/poly-starter/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
"$basedir/../../bin/turbo"   "$@"
exit $?
